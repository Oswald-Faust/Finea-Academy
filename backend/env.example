# Configuration de la base de données MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/finea_academie

# Configuration JWT
JWT_SECRET=votre_secret_jwt_tres_securise
JWT_EXPIRE=30d

# Configuration email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_app

# Configuration Firebase (Notifications Push)
FIREBASE_PROJECT_ID=votre-projet-firebase
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"votre-projet","private_key_id":"...","private_key":"..."}
# Alternative: vous pouvez aussi pointer vers un fichier de clé de service
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# Configuration serveur
PORT=5000
NODE_ENV=production

# URLs autorisées
FRONTEND_URL=https://finea-admin.vercel.app
FLUTTER_APP_URL=https://finea-academie.vercel.app

# Configuration Vercel
VERCEL_URL=https://finea-backend.vercel.app 